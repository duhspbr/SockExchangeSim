<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:elevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_comp">

        <ImageView
            android:id="@+id/img_comp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/c9"/>

        <TextView
            android:id="@+id/lblCompName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_comp"
            android:layout_marginLeft="180dp"
            android:layout_above="@+id/lblPercent"
            android:text="BBK"
            android:textColor="#311B92"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_semibold"/>

        <TextView
            android:id="@+id/lblPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_comp"
            android:layout_marginLeft="180dp"
            android:layout_below="@+id/lblVal1"
            android:text="+2,34%"
            android:textColor="#43A047"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"/>

        <TextView
            android:id="@+id/lblVal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_comp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:text="R$ 1 356, 00"
            android:textColor="#757474"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold"/>

        <TextView
            android:id="@+id/lblVal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_comp"
            android:layout_below="@+id/lblCompName"
            android:layout_marginLeft="25dp"
            android:text=" 6 654.657 PTS"
            android:textColor="#9C9B9B"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"/>

        <ImageView
            android:id="@+id/lblMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_comp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="255dp"
            android:src="@drawable/ic_money"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>